#!/usr/bin/env node

var xtoolkit = require('xtoolkit');
var path = require('path');

xtoolkit.command('init','local:' +  path.join(__dirname,'../src/weex-init.js'));


// if you want to preview now we wish you use  weex preview
xtoolkit.command('preview','local:' +  path.join(__dirname,'../build/weex-preview.js'));

//xtoolkit.command('debug','local:' +  path.join(__dirname,'../build/weex-debug.js'));

// old api is still supported
xtoolkit.command('','local:' +  path.join(__dirname,'../build/weex.js'));

xtoolkit.version(require('../package.json').version);
